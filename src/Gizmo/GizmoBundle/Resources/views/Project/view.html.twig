                    <div class="col-md-9 col-sm-8">
                        <div class="project-title">
                            <h1 class="value">{{project.getName2()|e}}</h1>
                        </div>
                        <div class="project-short-description">
                            <h4 class="value">{{project.getTitle()|e}}</h4>
                        </div>
                        <div class="project-slider" dir="ltr">
                            {%  if(project.getSlides()|length) %}
                                <div id="showcase" class="showcase" >
                                    {% for slide in project.getSlides() %}
                                        <div class="showcase-slide" >
                                            <div class="showcase-content"> 
                                                
                                                {% if(project.getTitle() != '') %}
                                                {% set image_alt = project.getTitle() %}
                                                {% else %}
                                                {% set image_alt = project.getName2() %}    
                                                {% endif %}
                                                
                                                {% if(slide.getType() == 'photo') %}
                                                    <img alt="{{ image_alt|e }}" src="{{ slide.getWebPath() }}">
                                                {% else %}
                                                    {{slide.getValue()|raw}}
                                                {% endif %}
                                            </div>
                                            <div class="showcase-thumbnail">
                                                {% if(slide.getType() == 'photo') %}
                                                    <img alt="{{image_alt|e}}" src="{{ slide.getWebPath() }}" style="width:100px; height: 100px;" />
                                                {% else %}
                                                    <span class="video-thumb">Video</span>
                                                {% endif %}
                                                <div class="showcase-thumbnail-cover"></div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
