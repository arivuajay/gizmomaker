{% extends 'GizmoBundle::public_main.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('js/slick/slick.css') }}" rel="stylesheet" media="screen">

    <style>

        #home-intro {
            height: 500px;
            width: 100%;
            overflow: hidden;
        }


        video#bgvid {

            max-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -100;
            background-size: cover;
        }

        #featured-projects-slide {
            padding-top: 20px;
        }

        .slick-slide {
            background: #fff;
            margin: 0 10px;
            padding: 10px;

        }

        .project-item-thumb-wrap {
            overflow: hidden;
            height: 150px;
        }

        /* Arrows */
        .slick-prev, .slick-next {
            position: absolute;
            display: block;
            height: 70px;
            width: 70px;
            line-height: 0;
            font-size: 0;
            cursor: pointer;
            background: transparent;
            color: transparent;
            top: 50%;
            margin-top: -10px;
            padding: 0;
            border: none;
            outline: none;
        }

        .slick-prev:hover, .slick-prev:focus, .slick-next:hover, .slick-next:focus {
            outline: none;
            background: transparent;
            color: transparent;
        }

        .slick-prev:hover:before, .slick-prev:focus:before, .slick-next:hover:before, .slick-next:focus:before {
            opacity: 1;
        }

        .slick-prev.slick-disabled:before, .slick-next.slick-disabled:before {
            opacity: 0.25;
        }

        .slick-prev:before, .slick-next:before {
            font-family: "slick";
            font-size: 70px;
            line-height: 1;
            color: white;
            opacity: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .slick-prev {
            left: -75px;
        }

        [dir="rtl"] .slick-prev {
            left: auto;
            right: -75px;
        }

        .slick-prev:before {
            content: "←";
        }

        [dir="rtl"] .slick-prev:before {
            content: "→";
        }

        .slick-next {
            right: -75px;
        }

        [dir="rtl"] .slick-next {
            left: -75px;
            right: auto;
        }

        .slick-next:before {
            content: "→";
        }

        [dir="rtl"] .slick-next:before {
            content: "←";
        }


    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/slick/slick.min.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $("#featured-projects-slide").slick({
                slidesToShow: 4,
                slidesToScroll: 2,
                dots: false,
                onInit: function () {
                    $('.slick-slide').height($('.slick-track').height());
                }
            });
            var current_slide = 1;
            setInterval(function(){
                $('.intro-text-area-'+current_slide).removeClass('active');

                if((current_slide + 1) > 3){
                    current_slide = 1;
                }else{
                    current_slide ++;
                }
                $('.intro-text-area-'+current_slide).addClass('active');
            },10000);
        });
    </script>
{% endblock %}

