{% extends 'GizmoBundle::public_main.html.twig' %}


{% block body %}
    <div class="row">
    <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4">

        <div class="white-box">

            <form action="{{ path('login_check') }}" method="post" class="form-signin" role="form">

                <h4 class="hs_heading">כניסה לחברים</h4>
                {% if error %}
                    <div class="alert alert-danger">{{ error.message | replace({
                        "Bad credentials": "Username and Password do not match"
                        })}}</div>

                {% endif %}
                <div class="form-group"><input type="email" id="email" class="form-control" placeholder='דוא"ל'
                                               required="required"
                                               autofocus="autofocus" name="_username" value="{{ last_username }}"/>
                </div>
                <div class="form-group"><input type="password" id="password" name="_password" class="form-control"
                                               placeholder="סיסמא"
                                               required="required">
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                        >
                <button type="submit" class="btn btn-lg btn-primary btn-block">כניסה</button>
            </form>
        </div>
    </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body{
            background: #e1edf7;
        }
    </style>
{% endblock %}
