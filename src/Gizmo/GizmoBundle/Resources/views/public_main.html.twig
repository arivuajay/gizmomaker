    <body dir="rtl">
        <div id="big-daddy">
            <div class="navbar-top">
                <div class="container">
                    <ul class="list-inline" >
                        {top_menu}
                    </ul>
                </div>
            </div>
            <div class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="navbar-header  navbar-right">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".header-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{path('gizmo_home')}}">
                            {% image '@GizmoBundle/Resources/public/images/logo.png' %}
                            <img src="{{ asset_url }}" width="181" height="38" alt="גיזמו מייקר-פיתוח מוצרים וטכנולוגיות"  title="גיזמו מייקר-פיתוח מוצרים וטכנולוגיות"/>
                            {% endimage %}
                        </a>
                    </div>
                    <p class="navbar-text contact-info navbar-left">
                        <a href="javascript:void(0)" id="expand_phone_no">
                            התקשר אלינו
                            {% image '@GizmoBundle/Resources/public/images/phone.png' %}
                            <img src="{{ asset_url }}" width="36" height="36" alt="התקשר אלינו">
                            {% endimage %}
                        </a>
                        <span id="phone_block" class="hide">
                            צור קשר<br>
                            {% set ppc_source =  app.request.get('utm_source') %}
                            {% set ppc_campaign =  app.request.get('utm_campaign') %}
                            {% if (ppc_source|length > 0) or (ppc_campaign|length > 0) %}
                                055-8874012
                            {% else %}
                                054-4745412
                            {% endif %}
                        </span>
                    </p>
                    <div class="collapse navbar-collapse header-collapse">
                        <ul class="nav nav-justified">
                            <li class="how-it-works"><a href="http://gizmomaker.co.il/articles/איך_זה_עובד" >
                                    איך זה עובד  {% image '@GizmoBundle/Resources/public/images/help_50.png' %}
                                    <img src="{{ asset_url }}" width="36" height="36" alt="איך זה עובד  ">
                                    {% endimage %}</a></li>
                            <li class="view-projects"><a href="{{ path('project_infinite_scroll') }}">צפה בפרויקטים
                                    {% image '@GizmoBundle/Resources/public/images/search_50.png' %}
                                    <img src="{{ asset_url }}" width="36" height="36" alt="צפה בפרויקטים">
                                    {% endimage %}</a></li>
                            <li class="submit-idea"><a href="#contact-us" data-toggle="modal">התחל
                                    {% image '@GizmoBundle/Resources/public/images/bulb_50.png' %}
                                    <img src="{{ asset_url }}" width="36" height="36" alt="התחל">
                                    {% endimage %}</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            {% block full_top %}

            {% endblock %}


            <div class="container">
                {% block body %}

                {% endblock %}

            </div>

            <footer class="site-footer">
